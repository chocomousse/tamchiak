<% @title="tamchiak | All Channels (Admin)" %>

<body>
  <!-- NAVIGATION BAR -->
  <%= render 'layouts/header_admin' %>

  <!-- CONTENT -->
  <div class="container">
    <% if current_user.is_admin? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Channel</th>
          <th>Menu</th>
          <th>Owner</th>
          <th>Channel Status</th>
          <th>Date created</th>
          <th></th>
        </tr>        
      </thead>
      <tbody>
        <% @channels.each do |t| %>
        <p>
          <tr>
            <td><%= t.cname %></td>
            <td><%= t.menu %></td>              
            <td><%= t.added_by %></td>
            <td><%= t.channel_status %></td>
            <td><%= t.created_at.strftime("%d %b %Y") %></td>              
            <td><%= form_for(:session, url: join_channel_path) do |f| %>
              <%= f.hidden_field :cname, :value => t.cname %>
              <%= f.submit  "Join", {class: "btn btn-primary btn-sm"} %>
              <% end %></td>

          </tr>
        </p>
        <% end %>
      </tbody>
    </table>
    <% end %>
    <% else %>
    <h1>Your current account does not have admin privileges!</h1>
    <% end %>
  </div>
</body>
