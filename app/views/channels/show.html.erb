<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Current Channel</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

  </head>

  <body>
    <!-- NAVIGATION BAR -->
    <%= render 'layouts/header' %>

    <!-- CONTENT -->

    <div class="container">
      <h1><%= @channel.cname %></h1>
      <button type="button"  class: "btn btn-primary" data-no-turbolink="true"><%= link_to "Add item", orders_path %> </button>
      <button type="button"  class: "btn btn-primary" data-no-turbolink="true"><%= link_to "Collate Orders", collate_path %></button>
      <button type="button"  class: "btn btn-primary" data-no-turbolink="true"><%= link_to "Home", join_or_create_path %></button>

      <p></p>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Category</th>
            <th>Sub-category</th>
            <th>Item code</th>
            <th>Name</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th>Total Price</th>
            <th>Added by</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |t| %>
          <p>
            <tr>
              <td><%= t.cat %></td>
              <td><%= t.subcat %></td>
              <td><%= t.item_code %></td>
              <td><%= t.meal %></td>
              <td><%= number_to_currency(t.unit_price) %></td>
              <td><%= t.quantity %></td>
              <td><%= number_to_currency(t.total_price) %></td>
              <td><%= t.user.name %></td>              
              <td><%= link_to 'Delete', t, :method => :delete %></td>
            </tr>
          </p>
          <% end %>


      </table>
      </tbody>
    </div>

  <div align="right"><h4><%= render 'layouts/channel_text' %></h4></div>

  </body>